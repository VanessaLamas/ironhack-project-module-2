<div class="modal modal-sheet position-static d-block bg-body-secondary bg-success-subtle-main-banner" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-body col-md-6 mx-auto mt-5">
        <form action="/new-pet" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="owner" value="{{user._id}}">
                <p class="mt-3">Pet name:</p>
                <div class="form">
                    <input type="text" name="name" class="form-control rounded-3"></div>
                    <p class="mt-3">Small description:</p>
                    <div class="form">
                        <input type="text" name="description" class="form-control rounded-3" id="floatingInput"></div>
                        <p class="mt-3">More details about my pet:</p>
                        <div class="form">
                            <textarea type="text" name="longDescription" class="form-control rounded-3" id="floatingInput"></textarea>
                        </div>
                        <p class="mt-3">Image:</p>
                        <input type="file" name="imageUrl" value="{{data.imageUrl}}" class="form-control rounded-3">
                            <p>
                                <button class="mt-5 w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Add my pet</button>
                            </p>
                        </form>
                    </div>
                </div>
