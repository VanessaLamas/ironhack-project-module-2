<div class="container my-5">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        <h1 class="text-body-emphasis">All pets</h1>
        <p class="lead">
            Discover the pets that are currently trying to find someone to walk them
        </p>
    </div>
</div>
<div class="container text-center">
    <div class="row row-cols-2">
        {{#each data }}
            <div class="col">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="{{ this.imageUrl }}" class="img-fluid rounded-start" alt="..."></div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{ this.name }}</h5>
                                    <p class="card-text">{{ this.description }}</p>
                                    <a href="/all-pets/{{ this.id }}" class="btn btn-primary">Discover</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
