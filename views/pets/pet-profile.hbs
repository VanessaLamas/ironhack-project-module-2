<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0" src="{{ data.imageUrl }}" alt="..."></div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">{{ data.name }}</h1>
                    <div class="fs-5 mb-5">
                        <p>Owner:
                            {{ user.firstName }}
                            {{ user.lastName }}</p>
                        <p>
                            Contact:
                            {{ user.phoneNumber }}</p>
                    </div>
                    <p class="lead">{{ data.description }}</p>
                    <p class="lead">{{ data.longDescription }}</p>
                    <div class="d-flex">
                        <form action="/all-pets/{{data._id}}/delete" method="POST">
                            <button class="btn btn-outline-dark flex-shrink-0 m-2">Delete</button>
                        </form>
                        <form action="/all-pets/{{data._id}}/edit" method="GET">
                            <button class="btn btn-outline-dark flex-shrink-0 m-2">Edit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <hr>
        <section>
            <h5 class="text-center">Comments</h5>
            {{#each data.comments}}
                <div class="container my-1 py-1 text-dark">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-11 col-lg-9 col-xl-7">
                            <div class="d-flex flex-start">
                                <div class="card w-100">
                                    <div class="card-body p-4">
                                        <div class="">
                                            <h5>{{this.author.firstName}}
                                                {{this.author.lastName}}</h5>
                                            <p>{{this.content}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </section>
        {{!-- posts/details.hbs --}}
        <form action="/all-pets/{{data._id}}/comment" method="post">
            <input type="text" name="author" value="{{user._id}}" hidden="hidden"/>
            <div class="container my-5 py-5 text-dark">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-6">
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="d-flex flex-start w-100">
                                    <div class="w-100">
                                        <h5>Add a comment</h5>
                                        <div class="form-outline">
                                            <textarea name="content" class="form-control" id="textAreaExample" rows="4"></textarea>
                                        </div>
                                        <div class="d-flex justify-content-between mt-3">
                                            <button type="submit" class="btn btn-danger">
                                                Send
                                                <i class="fas fa-long-arrow-alt-right ms-1"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
